      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }

      .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
      }

      .header {
        background-color: #f2f2f2;
        padding: 20px;
        text-align: center;
      }

      .content {
        background-color: #ffffff;
        padding: 20px;
      }

      .footer {
        background-color: #f2f2f2;
        padding: 20px;
        text-align: center;
      }
    </style>
